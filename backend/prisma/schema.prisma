// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Aluno {
  // ✅ CORREÇÃO AQUI: Adiciona @default(auto()) para que o MongoDB gere o ID
  id              String      @id @default(auto()) @map("_id") @db.ObjectId 
  nome            String
  // ✅ Email opcional, perfeito para praticidade
  email           String? 
  alturaCm        Int?        
  objetivo        String?     
  dataCadastro    DateTime    @default(now())
  evolucao        Evolucao[]
}

model Evolucao {
  // ✅ CORREÇÃO AQUI: Também para o modelo relacionado
  id              String      @id @default(auto()) @map("_id") @db.ObjectId 
  dataRegistro    DateTime    @default(now())
  pesoKg          Float
  percGordura     Float?
  observacoes     String?
  
  alunoId         String      @db.ObjectId
  aluno           Aluno       @relation(fields: [alunoId], references: [id])
}